# Database (SQLite for dev, Postgres for production)
DATABASE_URL=sqlite+aiosqlite:///./haloagent.db
# Production: postgresql://user:password@localhost:5432/haloagent

# Meta AI Studio (Llama 3)
META_AI_API_KEY=your_meta_ai_api_key
META_AI_ENDPOINT=https://api.meta.ai/v1

# WhatsApp Business Cloud API
WHATSAPP_API_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# USSD Gateway
USSD_API_KEY=your_ussd_key
USSD_ENDPOINT=https://ussd-provider.com/api

# Airtable
AIRTABLE_API_KEY=your_airtable_key
AIRTABLE_BASE_ID=your_base_id

# Security
SECRET_KEY=your-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-bytes

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# App Config
ENVIRONMENT=development
DEBUG=True
RETENTION_DAYS=90
